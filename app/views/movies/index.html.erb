<%= form_with url: movies_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a movie"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
      <% unless @results.nil? %>
        <% @results.each do |result| %>
          <% if result.searchable_type == "Movie" %>
            <p>Movie</p>
            <%= result.searchable %>
            <%= result.searchable.title %>
          <% else %>
            <p>TV Show</p>
            <%= result.searchable %>
            <%= result.searchable.synopsis %>
          <% end %>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
